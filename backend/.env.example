# ============================================================================
# NumerAI Backend Environment Variables Template
# ============================================================================
# Copy this file to .env and update the values according to your environment.
# Command: cp .env.example .env
# NEVER commit actual credentials to version control.
# ============================================================================

# ----------------------------------------------------------------------------
# Django Core Settings
# ----------------------------------------------------------------------------

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here-change-in-production

# Debug mode - Set to False in production
DEBUG=True

# Allowed hosts - Comma-separated list of hostnames
# For development: localhost,127.0.0.1
# For production: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# PostgreSQL database settings

DB_NAME=numerai
DB_USER=numerai
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# For production (Render.com, Heroku, etc.), you may use DATABASE_URL instead:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# ----------------------------------------------------------------------------
# CORS Settings
# ----------------------------------------------------------------------------
# Comma-separated list of allowed origins (frontend URLs)
# For development: http://localhost:3000,http://127.0.0.1:3000
# For production: https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF Trusted Origins (for production HTTPS)
# CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com

# ----------------------------------------------------------------------------
# Frontend URL
# ----------------------------------------------------------------------------
# Used for generating password reset links, email links, etc.
FRONTEND_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Redis Configuration (for Celery and Caching)
# ----------------------------------------------------------------------------

# Redis URL for cache
REDIS_URL=redis://localhost:6379/0

# Celery Broker URL (Redis)
CELERY_BROKER_URL=redis://localhost:6379/1

# Celery Result Backend URL (Redis)
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ----------------------------------------------------------------------------
# Email Configuration
# ----------------------------------------------------------------------------
# For development, use console backend (emails printed to console)
# For production, configure SMTP settings

# Email backend type
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (for production)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-sendgrid-username-or-api-key
EMAIL_HOST_PASSWORD=your-sendgrid-password
DEFAULT_FROM_EMAIL=noreply@numerai.app

# ----------------------------------------------------------------------------
# Stripe Configuration
# ----------------------------------------------------------------------------
# Required for payment processing and subscriptions
# Get these from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for subscription plans
# Create products and prices in Stripe Dashboard, then add their IDs here
STRIPE_PRICE_ID_BASIC=price_your_basic_plan_price_id
STRIPE_PRICE_ID_PREMIUM=price_your_premium_plan_price_id
STRIPE_PRICE_ID_ELITE=price_your_elite_plan_price_id

# ----------------------------------------------------------------------------
# Google OAuth Configuration
# ----------------------------------------------------------------------------
# Required for Google Sign-In functionality
# Get these from: https://console.cloud.google.com/apis/credentials

GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# ----------------------------------------------------------------------------
# Apple OAuth Configuration (Optional)
# ----------------------------------------------------------------------------
# Required only if implementing Apple Sign-In

APPLE_CLIENT_ID=your-apple-client-id
APPLE_SECRET=your-apple-secret

# ----------------------------------------------------------------------------
# Firebase Configuration (Optional)
# ----------------------------------------------------------------------------
# Required for push notifications
# Download service account key from Firebase Console and provide path

FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-credentials.json

# ----------------------------------------------------------------------------
# Additional Settings
# ----------------------------------------------------------------------------

# OTP Configuration (can be adjusted)
# OTP_EXPIRY_MINUTES=10
# MAX_OTP_ATTEMPTS=3
# OTP_RESEND_COOLDOWN=60

# ============================================================================
# Setup Instructions:
# ============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Update all values marked with "your-..." or "change-..."
# 3. Generate a secure SECRET_KEY for production
# 4. Set up your PostgreSQL database
# 5. Configure Stripe account and get API keys
# 6. Set up Google OAuth credentials
# 7. Configure email service (SendGrid, AWS SES, etc.) for production
# ============================================================================
